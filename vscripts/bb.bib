	journal = {Personality and Individual Differences},
	author = {Connors, Michael H. and Halligan, Peter W. and Barnier, Amanda J. and Langdon, Robyn and Cox, Rochelle E. and Elliott, Jocelyn and Polito, V and Coltheart, Max},
